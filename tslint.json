{
    "linterOptions": {
        "exclude": ["node_modules", "demo", "doc", "dist", "test"]
    },
    "extends": ["tslint-config-alloy", "tslint-config-prettier"],
    "rules": {
        "max-line-length": {
            "options": [150]
        },
        "member-access": false,
        "strict-type-predicates": true,
        "no-angle-bracket-type-assertion": false,
        "prefer-const": true,
        "no-reference": false,
        "no-unused-expression": false,
        "no-magic-numbers": false,
        "semicolon": [true, "never"],
        "cyclomatic-complexity": [false, 32],
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "time", "timeEnd", "trace"]
        },
        "interface-name": [true, "always-prefix"],
        "member-ordering": false // static 方法必须在public之前
    }
}
