{
    "compileOnSave": false,
    "compilerOptions": {
      "sourceMap": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "strictNullChecks": false,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "jsx": "react",
      "outDir": "./dist/out-tsc",
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "dom",
        "scripthost",
        "esnext"
      ]
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  